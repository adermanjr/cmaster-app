    <%= form_tag "/usuarios/#{@usuario.id}/aceitar_contrato", method: :post do %>
    
      <%= hidden_field_tag :aceitar %>
      <div class="row g-2 mb-3">

        <div class="form-group col-sm-6 d-grid">
          <button type="submit"
                  onclick="$('#aceitar').val(true);"
                  class="btn btn-success btn-block"
                  title="<%= t :label_aceitar_contrato %>">
            <%= t :label_aceitar_contrato %>
          </button>
        </div>
      
        <div class="form-group col-sm-6 d-grid">
          <button type="submit"
                  onclick="$('#aceitar').val(false);"
                  class="btn btn-danger btn-block"
                  title="<%= t :label_recusar_contrato %>">
            <%= t :label_recusar_contrato %>
          </button>
        </div>

      </div>
