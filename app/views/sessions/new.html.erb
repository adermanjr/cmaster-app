<% provide(:title, t(:label_entrar)) %>
<h4 class="mt-3"><strong><%= t(:label_entrar) %></strong></h4>

<div class="row justify-content-md-center">
  <div class="col-md-6 ml-md-auto mr-md-auto">
    <%= form_for(:session, url: login_path) do |f| %>

      <div class="form-group mt-3 mb-3">
        <%= f.label t(:label_email) %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      
      <div class="form-group mb-4">
        <%= f.label t(:label_senha) %>
        <%= f.password_field :password, class: 'form-control' %>
        <div class="form-text">
          <small><%= link_to "(" + t(:label_esqueceu_senha) + ")", new_password_reset_path, class: "text-muted" %></small>
        </div>
      </div>

      <div class="form-group mb-3">
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span><%= t(:label_manter_conectado) %></span>
        <% end %>
      </div>

      <div class="d-grid">
        <%= f.submit t(:label_entrar), class: botao_estilo %>
      </div>
    <% end %>

    <div class="row justify-content-md-center mt-3">
      <p><%= t(:label_nao_inscrito) + " " %><%= link_to t(:label_signup_now), inscrever_path %></p>
    </div>
    
  </div>
</div>

